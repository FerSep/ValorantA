        <section class="caja">
    
            <Agente 
            imagen="/agentes/raze/Raze_Artwork_Full.webp"
    
            />
    
    
            <Descri p
            spell1="/agentes/raze/Boom_Bot.webp"
            spell2="/agentes/raze/Blast_Pack.webp"
