<Layout>
    

    <main>
        <section class="caja">
    
            <Agente 
            imagen="/agentes/brimstone/Brimstone_Artwork_Full.webp"
    
            />
    
    
            <Descri p
            spell1="/agentes/brimsotne/Incendiary.webp"
            spell2="/agentes/brimsotne/Stim_Beacon.webp"
            spell3="/agentes/brimsotne/Sky_Smoke.webp"
